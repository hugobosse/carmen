<div class="navbar-carmen">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-carmen-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-carmen-right hidden-xs hidden-sm">
    <%= link_to "Home", root_path, class: "navbar-carmen-item navbar-carmen-link" %>
    <%= link_to "Carmen qui ?", about_path, class: "navbar-carmen-item navbar-carmen-link" %>
    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnexion") %>
      <% end %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-carmen-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle carmen-dropdown" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-carmen-dropdown-menu">
        <li><%= link_to "Home", root_path, class: "navbar-carmen-item navbar-carmen-link" %></li>
        <li><%= link_to "Carmen qui ?", about_path, class: "navbar-carmen-item navbar-carmen-link" %></li>
        <% if user_signed_in? %>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out">Déconnexion</i>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
